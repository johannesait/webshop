        <li>
            @Ajax.RawActionLink("<i class='fa fa-shopping-cart'></i> Ostukorv <span id='cart-sum-badge'></span>", "Cart", "Product", null, new AjaxOptions
                                   {
                                       HttpMethod = "GET",
